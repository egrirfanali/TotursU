<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="5"
    android:orientation="horizontal">


    <LinearLayout
        android:id="@+id/details_layout"
        android:layout_width="@dimen/dimension_0dp"

        android:layout_height="match_parent"
        android:layout_weight="4"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_address_title"
                android:layout_width="@dimen/dimension_0dp"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:layout_marginTop="@dimen/dimension_15dp"
                android:layout_marginLeft="@dimen/dimension_20dp"
                android:layout_weight="0.10"
                android:text="Home" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_address_primary"
                android:layout_width="@dimen/dimension_0dp"
                android:layout_marginLeft="@dimen/dimension_20dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.02"
                android:text="sector abcd" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.002"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/tv_likes_count"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimension_20dp"
                android:layout_weight="0.05"
                android:text="newyork"

                />

        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/image_layout"
        android:layout_width="@dimen/dimension_0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.strendent.tutorsu.Utilities.CircularImageView
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:clickable="true"
                android:onClick="addPhoto"
                android:tag="ic_launcher"
                app:border="true"
                app:border_color="#FFFFFFFF"
                app:border_width="4dp"
                app:selector="true"
                app:selector_color="#4403a9f4"
                app:selector_stroke_color="#aa5677fc"
                app:selector_stroke_width="4dp"
                app:shadow="true"
                android:scaleType="matrix"
                 android:id="@+id/image_view_map_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dimension_10dp"
                android:src="@drawable/ic_launcher" />


        </RelativeLayout>

        <!--android:layout_weight="6"-->
    </LinearLayout>

</LinearLayout>