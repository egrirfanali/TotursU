<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:layout_margin="@dimen/dimension_10dp"
    android:orientation="vertical" >

    <EditText
        android:id="@+id/edtEmail"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dimension_05dp"
        android:hint="@string/email" />

    <EditText
        android:id="@+id/edtPassword"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dimension_05dp"
        android:hint="@string/password"
        android:inputType="textPassword"
         />
    
     <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dimension_05dp"
        android:text="@string/forgot_your_pwd"
        android:textColor="@color/light_green"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/imageViewProceed"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/ic_next_disabled" 
        android:onClick="onProceedClick"
        />

</LinearLayout><!-- From: file:/D:/Work/StrendentWork/TutorzuIrfanRepo/android/tutorsU/src/main/res/layout/fragment_sign_up.xml -->